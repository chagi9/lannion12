<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, (t :error_session)) %></h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% form_for :user do |form| %>
        <p>
          <label for="user_name"><%= (t :nom_user) %> : </label>
          <%= form.text_field :name, :size => 40 %>
        </p>

        <p>
          <label for="user_password"><%= (t :pass) %> : </label>
          <%= form.password_field :password, :size => 40 %>
        </p>

        <p>
          <label for="user_password_confirmation"><%= (t :pass_conf) %> : </label>
          <%= form.password_field :password_confirmation, :size => 40 %>
        </p>

        <%= submit_tag (t :add_user), :class => "submit" %>

    <% end %>
<% end %>
