<h1><%= (t :list_user) %></h1>

<table>
  <tr>
    <th><%= (t :user_name) %></th>
    <th>Hashed password</th>
    <th>Salt</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= link_to (t :show), user %></td>
    <td><%= link_to (t :edit), edit_user_path(user) %></td>
    <td><%= link_to (t :delete), user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

