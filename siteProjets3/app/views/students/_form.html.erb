<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@student.errors.count, (t :error_student)) %></h2>

      <ul>
      <% @student.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label (t :student_name) %><br />
    <%= f.text_field :studentName %>
  </div>
  <div class="field">
    <%= f.label (t :student_firstname) %><br />
    <%= f.text_field :studentFirstName %>
  </div>
  <div class="field">
    <%= f.label (t :student_cip) %><br />
    <%= f.text_field :cip %>
  </div>
  <div class="field">
    <%= f.label (t :inactive) %><br />
    <%= f.check_box :inactive %>
  </div>
  <div class="actions">
    <%= f.submit%>
  </div>
<% end %>
