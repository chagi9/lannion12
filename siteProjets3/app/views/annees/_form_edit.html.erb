<%= form_for(@annee) do |f| %>
    <% if @annee.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@annee.errors.count, (t :error_year)) %></h2>

          <ul>
            <% @annee.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label (t :year) %><br />
      <%= f.number_field :year %>
    </div>
    <div class="actions">
      <%= f.submit (t :edit)%>
    </div>
<% end %>
