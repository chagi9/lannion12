<%= form_for(@teacher) do |f| %>
  <% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, (t :error_teacher)) %></h2>

      <ul>
      <% @teacher.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label (t :teacher_name) %><br />
    <%= f.text_field :teacherName %>
  </div>
  <div class="field">
    <%= f.label (t :teacher_firstname) %><br />
    <%= f.text_field :teacherFirstName %>
  </div>
  <div class="field">
    <%= f.label (t :teacher_cip) %><br />
    <%= f.text_field :cipTeacher %>
  </div>
  <div class="field">
    <%= f.label (t :inactive) %><br />
    <%= f.check_box :inactifTeacher %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
