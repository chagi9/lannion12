<%= title @teacher.teacherFirstName %> <%= title " " + @teacher.teacherName.upcase %>
<h1><%= @teacher.teacherFirstName %> <%= " " + @teacher.teacherName.upcase %></h1>
<p id="notice"><%= notice %></p>

<p>
  <b><%= (t :teacher_name) %> </b>
  <%= @teacher.teacherName %>
</p>

<p>
  <b><%= (t :teacher_firstname) %> </b>
  <%= @teacher.teacherFirstName %>
</p>

<p>
  <b><%= (t :teacher_cip) %> </b>
  <%= @teacher.cipTeacher %>
</p>
<p>
  <b><%= (t :projects) %> : </b>
  <% if @teacher.projects.count > 0 %>
      <%= @teacher.projects.collect {|c| c.projectName}.join(", ") %>
  <% else %>
      <%= (t :no_project_teacher) %>
  <% end %>
</p>


<%= link_to (t :manage_teacher_projects), :id => @teacher, :action => 'projects' %>
<%= link_to (t :edit), edit_teacher_path(@teacher) %> |
<%= link_to (t :back), teachers_path %>
<br/>
