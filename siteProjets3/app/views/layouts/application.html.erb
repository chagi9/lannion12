      <!-- Lien pour la bannière -->
      <banniere>
        <%= render(:partial => "layouts/banniere_random") %>
      </banniere>
    </logo>
  </div>

  <!-- Menu principal horizontal -->
  <ul class="menu">
    <li><%= link_to (t 'accueil'), {:controller => 'home', :action => 'index'}, :class => selected_class('home') %></li>
    <li><%= link_to (t 'act_peda'), {:controller => 'home', :action => 'course'}, :class => selected_class('course') %></li>
    <li><a><%= (t 'un_proj') %></a>
      <ul id="proj">
        <li><%= link_to (t 'un_proj_desc'), {:controller => 'home', :action => 'project'} %></li>
        <li><%= link_to (t 'un_proj_format'), {:controller => 'home', :action => 'format'} %></li>
      </ul>
    </li>
    <% if signed_in? %>
        <li><%= link_to 'Administration', {:controller => 'sessions', :action => 'index'}, :class => selected_class('sessions') %></li>
    <% else %>
        <li><%= link_to 'Administration', :controller => 'sessions', :class => selected_class('sessions') %></li>
    <% end %>
    <li><a><%= (t 'lang') %></a>
      <ul id="lang">
        <li><%= link_to "English", :locale => 'en' %></li>
        <li><%= link_to "Français", :locale => 'fr' %></li>
      </ul>
    </li>
  </ul>

  <% if flash[:notice] %>
      <div id="flash"><%= flash[:notice] %></div>
  <% end -%>

  <!-- Corps de la page -->
  <div id="contenu">
    <%= yield %>
  </div>

  <!-- Pied de page -->
  <div id="footer">
    © Laboratoire eXit, Université de Sherbrooke, 2500, boul. de l'Université, Sherbrooke (Québec) CANADA J1K 2R1
  </div>
</div>

